
<h2>Nueva Cuenta</h2>

    <div class="registerFirstName">
        <label for="firstName">Nombre:</label>
        <input type="text" id="firstName" placeholder="Nombre" name="firstName" required />
    </div>
    
    <div class="registerLastName">
        <label for="lastName">Apellido:</label>
        <input type="text" id="lastName" placeholder="Apellido" name="lastName" required />
    </div>

    <div class="registerEmail">
        <label for="email">Email:</label>
        <input type="email" id="email" placeholder="Mail" name="email" required />
    </div>
    
    <div class="loginPass">
        <label for="password">Contraseña:</label>
        <input type="password" id="password" placeholder="Contraseña" name="password" required />
    </div>

    <button class="registerButton" onclick="registerUser()"> Registrar cuenta </button>

    <a href="/"> Volver</a>
    
<script src="js/register.js"></script>
