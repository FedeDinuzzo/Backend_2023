<div class="chat">
  <h1 class="chatTitle">Real Time Chat</h1>
  <div class="chatContainer">
    <div class="chatBox">
      <div class="fieldName">
        <label for="name" class="nameLabel">Name</label>
        <input type="text" name="name" placeholder="name" required  id="name" class="name">
      </div>      
      <div class="fieldEmail">
        <label for="email" class="emailLabel">Email</label>
        <input type="text" name="email" placeholder="email" required id="email" class="email">
      </div>      
      <div class="fieldMessage">
        <label for="message" class="messageLabel">Message</label>
        <input type="text" name="message" placeholder="message" required id="message" class="message">
      </div>
      <div class="chatButton">
        <button onclick="sendMessage()" class="button">Send</button>
      </div>
    </div>

    <div class="chatView">
        <div class="viewTitle text-white">Chat</div>
        <textarea name="message" id="view" class="view"></textarea>
    </div>    
  </div>
</div>

